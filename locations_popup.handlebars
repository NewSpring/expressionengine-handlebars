<div class="map-tooltip-wrapper">
	<div class="map-tooltip">
		<h5>{{campus}}, {{location.state}}</h5>
	{{#if status}}
		<h6 class="push-quarter--bottom gray">Coming Soon</h6>

		{{#if category}}
			<h6 class="color--info caps">{{category}}</h6>
			<small>{{categorySummary}}</small>
		{{/if}}

		{{#if launch}}
			<h6 class="flush">Launch Date</h6>
			<small>{{launch}}</small>
		{{/if}}
		{{#if phones}}
			<h6 class="flush">Contact</h6>
			<small>{{phones}}<br><a href="mailto:{{email}}">{{email}}</a></small>
		{{/if}}

	</div>
	{{else}}
		{{#if category}}
			<h6 class="color--info caps">{{category}}</h6>
			<small>{{categorySummary}}</small>
		{{else}}
			<h6 class="flush">Address</h6>
			<small>{{#if location.name}}{{location.name}}<br>{{/if}}
			{{#if location.street1}}{{location.street1}}{{#if location.street2}}<br>{{/if}}{{/if}}
			{{#if location.street2}}{{location.street2}}{{/if}}<br>
			{{location.city}}, {{location.state}} {{location.zip}}{{#if directions}}<br><a href="{{directions}}">Get Directions</a>{{/if}}</small>
		{{/if}}

		{{#if services}}
			<h6 class="flush">Service Times</h6>
			<small>{{services}}</small>
		{{/if}}
		{{#if phones}}
			<h6 class="flush">Contact</h6>
			<small>{{phones}}<br><a href="mailto:{{email}}">{{email}}</a></small>
		{{/if}}
	</div>
		<a href="{{url}}" class="btn btn--square">More Details</a>
	{{/if}}
</div>
